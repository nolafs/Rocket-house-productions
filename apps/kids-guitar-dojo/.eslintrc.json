{
  "extends": ["plugin:@nx/react-typescript", "next", "next/core-web-vitals", "../../.eslintrc.json"],
  "ignorePatterns": ["!**/*", ".next/**/*", "node_modules/**/*", "next-env.d.ts"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx", "*.d.ts"],
      "rules": {
        "@next/next/no-html-link-for-pages": ["error", "apps/kids-guitar-dojo/pages"],
        "@typescript-eslint/explicit-module-boundary-types": "off",
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/no-unused-vars": "off",
        "@typescript-eslint/no-circle": "off",
        "@typescript-eslint/no-empty-interface": ["warn"],
        "@nx/enforce-module-boundaries": [
          "warn",
          {
            "allow": [
              "@components/*",
              "@hooks/*",
              "@utils/*",
              "@assets/*",
              "@/slices",
              "@/prismicio"
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.spec.ts", "*.spec.tsx", "*.spec.js", "*.spec.jsx"],
      "env": {
        "jest": true
      }
    }
  ]
}
